<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "名称" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :kind, "类型" %><br>
    <%= f.text_field :kind %>
  </div>
  <div class="field">
    <%= f.label :brand, "品牌" %><br>
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :smodel, "型号" %><br>
    <%= f.text_field :smodel %>
  </div>
  <div class="field">
    <%= f.label :ip, "IP地址" %><br>
    <%= f.text_field :ip %>
  </div>
  <div class="field">
    <%= f.label :ilo, "iLO地址" %><br>
    <%= f.text_field :ilo %>
  </div>
  <div class="field">
    <%= f.label :cpu, "CPU" %><br>
    <%= f.text_field :cpu %>
  </div>
  <div class="field">
    <%= f.label :ram, "内存" %><br>
    <%= f.text_field :ram %>
  </div>
  <div class="field">
    <%= f.label :harddisk, "硬盘" %><br>
    <%= f.text_field :harddisk %>
  </div>
  <div class="field">
    <%= f.label :os, "操作系统" %><br>
    <%= f.text_field :os %>
  </div>
  <div class="field">
    <%= f.label :sn, "序列号" %><br>
    <%= f.text_field :sn %>
  </div>
  <div class="field">
    <%= f.label :expire, "服务到期" %><br>
    <%= f.date_select :expire, { :order => [:year, :month, :day], :start_year => Time.now.year, :end_year => Time.now.year + 10}, class: 'datepiker' %>
  </div>
  <div class="field">
    <%= f.label :position, "位置" %><br>
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :remark, "备注" %><br>
    <%= f.text_area :remark %>
  </div>
  <div class="actions">
    <%= f.submit "提交", disable_with: "正在努力提交中……", class: "btn-success" %><%= link_to "取消", servers_path, class: "btn-cancel" %>
  </div>
<% end %>
